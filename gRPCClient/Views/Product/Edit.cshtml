@{
}
@Html.AntiForgeryToken()

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="@Model.ProductID" />

    <table class="table table-striped">
        <tr>
            <td>Product ID</td>
            <td>Product Name</td>
            <td>Quantity</td>
            <td>Date Received</td>
            <td>Cost</td>
        </tr>
        <tr>
            <td>
                <input type="text" asp-for="@Model.ProductID" readonly style="background-color: #e6e6e6; color: #666666; " />
            </td>
            <td>
                <input type="text" asp-for="@Model.ProductName" />
            </td>
            <td>
                <input type="text" asp-for="@Model.Quantity" />
            </td>
            <td>
                <input type="date" asp-for="@Model.DateRecieved" />
            </td>
            <td>
                <input type="text" asp-for="@Model.Cost" />
            </td>
        </tr>
    </table>
    <button type="submit" class="btn btn-primary">Update</button>

</form>
